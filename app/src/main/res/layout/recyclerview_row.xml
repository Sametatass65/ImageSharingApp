<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/user_email"
        android:layout_width="226dp"
        android:layout_height="39dp"
        android:layout_marginHorizontal="180dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="-85dp"
        android:hint="User Email"
        android:textColor="#0E08BD"
        android:textSize="20sp"
        android:textColorHint="@color/black"
        android:textAlignment="center"></TextView>

    <ImageView
        android:id="@+id/recycler_row_imageview"
        android:layout_width="164dp"
        android:layout_height="179dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/ic_launcher_background"></ImageView>

    <TextView
        android:id="@+id/user_comment"
        android:layout_width="226dp"
        android:layout_height="39dp"
        android:layout_marginTop="-75dp"
        android:layout_marginLeft="182dp"
        android:hint="User Comment"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColorHint="@color/black"
        android:textColor="#0E08BD"></TextView>



</LinearLayout>