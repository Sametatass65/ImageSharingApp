<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp">
    <TextView
        android:id="@+id/user_email"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="195dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="-95dp"
        android:hint="User Email"
        android:textColor="#0E08BD"
        android:textSize="20sp"
        android:textColorHint="@color/black"
        android:textAlignment="center"></TextView>

    <ImageView
        android:id="@+id/recycler_row_imageview"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        tools:srcCompat="@drawable/ic_launcher_background"></ImageView>

    <TextView
        android:id="@+id/user_comment"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="-95dp"
        android:layout_marginLeft="195dp"
        android:hint="User Comment"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColorHint="@color/black"
        android:textColor="#0E08BD"></TextView>


</LinearLayout>